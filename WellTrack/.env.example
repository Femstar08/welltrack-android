# WellTrack Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# GARMIN CONNECT INTEGRATION
# =============================================================================
# Register your app at https://developer.garmin.com/
GARMIN_CLIENT_ID=your_garmin_client_id_here
GARMIN_CLIENT_SECRET=your_garmin_client_secret_here
GARMIN_REDIRECT_URI=welltrack://garmin/callback

# =============================================================================
# SAMSUNG HEALTH INTEGRATION
# =============================================================================
# Register your app at https://developer.samsung.com/health
SAMSUNG_HEALTH_APP_ID=your_samsung_health_app_id_here
SAMSUNG_HEALTH_CLIENT_SECRET=your_samsung_health_client_secret_here

# =============================================================================
# OPENAI INTEGRATION (for AI features)
# =============================================================================
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION_ID=your_openai_org_id_here

# =============================================================================
# ENCRYPTION & SECURITY
# =============================================================================
# Generate a strong 32-character key for data encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
# Generate a strong key for JWT signing
JWT_SECRET=your_jwt_secret_key_here

# =============================================================================
# EXTERNAL APIS (Optional)
# =============================================================================
# For recipe import and nutritional data
SPOONACULAR_API_KEY=your_spoonacular_api_key_here
EDAMAM_APP_ID=your_edamam_app_id_here
EDAMAM_APP_KEY=your_edamam_app_key_here

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# For app performance monitoring
FIREBASE_PROJECT_ID=your_firebase_project_id_here
CRASHLYTICS_API_KEY=your_crashlytics_api_key_here

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================
# Environment type: development, staging, production
ENVIRONMENT=development
DEBUG_MODE=true
ENABLE_LOGGING=true

# =============================================================================
# HEALTH CONNECT CONFIGURATION
# =============================================================================
# Health Connect package name for different environments
HEALTH_CONNECT_PACKAGE_NAME=com.google.android.apps.healthdata